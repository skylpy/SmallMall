<view class="avatar">
    <image src="{{userInfo.avatarUrl}}"></image>
    <text>{{userInfo.nickName}}</text>  
</view>
<view class="list" wx:for="{{userListInfo}}" >
    <image class="icon" src="{{item.icon}}"></image>
    <text>{{item.text}}</text>
    <image class="arrow" src="src"></image>
    <view wx:if="{{item.isunread}}">{{item.unreadNum}}</view>   
</view>