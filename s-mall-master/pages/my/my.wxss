/* pages/my/my.wxss */

page {
  background: #eee;
}

.avatar {
  width: 100%;
  height: 200px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff87a;
}

.avatar image {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-bottom: 10px;
}

.list {
  width: 100%;
  padding-top: 15px;
  border-bottom: 1px solid #ccc;
  height:45px;
  box-sizing:border-box;
  font-size: 14px;
}

.list .icon {
  float: left;
  width: 20px;
  height: 20px;
  margin:-3px 15px 0;
}

.list text {
  float: left;
}

.list view {
  float: right;
  width: 15px;
  height: 15px;
  border-radius: 50%;
  background: red;
  color: #fff;
  text-align: center;
  line-height: 15px;
  font-size: 10px;
}

.list .arrow {
  width: 15px;
  height: 15px;
  float: right;
  margin:0 15px;
  background-image: url(../../images/icon-arrowdown.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
