/* pages/classify/classify.wxss */
page{
    background:#eee;
}
.box{
    position: relative;
    width:100%;
    color: #555;
}
.left_list{
    width:25%;
    height:100%;
    background: #eee;
}
.list_item{
    width:100%;
    height:45px;
    line-height: 45px;
    border-bottom:1px solid #ccc;
    text-align: center;
    font-size:14px;
}
.active{
    background: #fff;
}
.right_cont{
    background: #fff;
    width:75%;
    right:0;
    top:0;
    position: absolute;
    height:100%;
}
.right_item{
    width:33.33%;
    height:80px;
    float: left;
}
.img{
    width:50px;
    height:30px;
    display: block;
    margin:0 auto;
}
.text{
    font-size: 12px;
    text-align: center;
    padding-top:5px;
    overflow: hidden;
    white-space: nowrap;
}
.mes{
    text-align: center;
    color:#666;
}